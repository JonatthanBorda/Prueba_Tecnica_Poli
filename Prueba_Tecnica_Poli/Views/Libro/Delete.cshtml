@model Prueba_Tecnica_Poli.Models.Libro

@{
    ViewData["Title"] = "Eliminar Libro";
}

<div class="container m-4 p-4">
    <div class="card p-4">
        <div class="card-title text-center">
            <h1 class="text-info">Eliminar un Libro</h1>
            <hr />
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-danger"><img width="30" height="30" src="https://img.icons8.com/sf-black-filled/64/back.png" alt="back" /> Atrás</a>
            </p>
            <h3>¿Está seguro que desea eliminar este Libro?</h3>
            <div class="row px-5">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NumPaginas)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumPaginas)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FecPublicacion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FecPublicacion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdAutorNavigation)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdAutorNavigation.NombreCompleto)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdEditorialNavigation)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdEditorialNavigation.Nombre)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdLibro" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
