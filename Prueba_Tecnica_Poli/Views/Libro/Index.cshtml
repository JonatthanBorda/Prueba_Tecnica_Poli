@model IEnumerable<Prueba_Tecnica_Poli.Models.Libro>

@{
    ViewData["Title"] = "Libros";
}

<div class="container m-4 p-4">
    <div class="card p-4">
        <div class="card-title text-center">
            <h1 class="text-info">Lista de Libros</h1>
            <hr />
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success"><img width="30" height="30" src="https://img.icons8.com/ios/50/plus--v1.png" alt="plus--v1" /> Agregar</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumPaginas)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FecPublicacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdAutor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdEditorial)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumPaginas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FecPublicacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdAutorNavigation.NombreCompleto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdEditorialNavigation.Nombre)
                            </td>
                            <td width="240">
                                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdLibro">Editar</a>
                                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.IdLibro">Detalles</a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdLibro">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>