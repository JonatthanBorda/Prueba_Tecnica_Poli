@model IEnumerable<Prueba_Tecnica_Poli.Models.Autor>

@{
    ViewData["Title"] = "Autores";
}

<div class="container m-4 p-4">
    <div class="card p-4">
        <div class="card-title text-center">
            <h1 class="text-info">Lista de Autores</h1>
            <hr />
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success"><img width="30" height="30" src="https://img.icons8.com/ios/50/plus--v1.png" alt="plus--v1" /> Agregar</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdAutor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdTipoDocto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumDocto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FecNacimiento)
                        </th>                       
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdAutor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoDoctoNavigation.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumDocto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FecNacimiento)
                            </td>                           
                            <td width="240">
                                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdAutor">Editar</a>
                                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.IdAutor">Detalles</a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdAutor">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



